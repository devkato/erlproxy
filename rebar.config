{sub_dirs, ["rel"]}.

{cover_enabled, true}.

{erl_opts, [warnings_as_errors, warn_export_all, warn_untyped_record]}.     
{xref_checks, [fail_on_warning, undefined_function_calls]}.

{validate_app_modules, true}.

{edoc_opts, [
  {dialyzer_specs, all},
  {report_missing_type, true},
  {report_type_mismatch, true},
  {pretty_print, erl_pp}
  %{preprocess, true}
]}.

